<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/PTS_image"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:padding="3dp"
        android:gravity="center"
        android:text="Flag" />

    <TextView
        android:id="@+id/PTS_teamName"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight="4"
        android:gravity="center"
        android:text="TEAMS" />

    <TextView
        android:id="@+id/PTS_mp"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:text="MP" />

    <TextView
        android:id="@+id/PTS_w"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:text="W" />

    <TextView
        android:id="@+id/PTS_d"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:text="D" />

    <TextView
        android:id="@+id/PTS_l"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:text="L" />

    <TextView
        android:id="@+id/PTS_gf"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:text="GF" />

    <TextView
        android:id="@+id/PTS_ga"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:text="GA" />

    <TextView
        android:id="@+id/PTS_gd"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:text="+/-" />

    <TextView
        android:id="@+id/PTS_pts"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:text="PTS" />

</LinearLayout>