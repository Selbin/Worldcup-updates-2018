                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:paddingLeft="5dp"
                            android:text="HIROKI SAKAI"
                            android:textColor="@android:color/black"
                            android:textSize="18sp" />

                        <TextView
